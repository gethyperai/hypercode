{
  "name": "hypercode",
  "version": "0.1.0",
  "description": "Hypercode is a friendly npm package that makes it easy to get live, structured LLM responses in your application.",
  "author": {
    "name": "Hyper AI",
    "email": "hello@gethyper.ai",
    "url": "https://gethyper.ai"
  },
  "license": "MIT",
  "homepage": "https://gethyper.ai",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "husky install",
    "watch": "tsc --watch --noEmit",
    "test": "jest",
    "ts-types": " tsc --emitDeclarationOnly --outDir dist",
    "build": "rm -rf dist && tsup && npm run ts-types",
    "release": "semantic-release --branches main",
    "lint": "eslint src/**",
    "lint:fix": "eslint --fix src/**",
    "pretty": "prettier --check .",
    "pretty:fix": "prettier --write .",
    "lint-staged": "lint-staged",
    "commitlint": "commitlint --edit",
    "commit": "cz"
  },
  "lint-staged": {
    "src/**": [
      "npm run pretty:fix",
      "npm run lint:fix",
      "npm run pretty",
      "npm run lint"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "axios": "^1.4.0",
    "dotenv": "^16.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.0",
    "@commitlint/config-conventional": "^18.4.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^29.5.7",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "semantic-release": "^22.0.7",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsup": "^7.2.0",
    "typescript": "^5.1.3"
  },
  "keywords": [
    "ai",
    "llm",
    "large language model",
    "developer",
    "tool",
    "convenience"
  ]
}
